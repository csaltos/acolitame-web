                </div>
                <div class="form-group" id="globalClave">
                    <label>Contrase√±a:</label>
                    <input id="clave" type="text" class="form-control" style="border: 1px solid black;">
                    <!--Insertar el correo de la empresa-->
                </div>
                <div class="form-group mb-5">
                    <label>Telefono:</label>
                    <input id="telefono" type="text" class="form-control" style="border: 1px solid black;">
                    <!--Insertar el telefono de la empresa-->
                </div>

                <div class="row align-items-center justify-content-center mt-5">

                    <div class="col-md-auto ">
                        <button type="button" class="btn btn-success" id="btnGuardar" onclick="guardar()">Guardar Cambios</button>
                    </div>

                </div>



            </div>
            <div class="col-sm-1 mb-5"></div>
        </div>
    </div>
    </div>

    <%- include('footer.ejs') %>
